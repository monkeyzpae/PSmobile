<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/label_inspect_data_entry_product"
        />
	<View style="@style/Divider"	    
	    />
    <com.epro.psmobile.view.ProductSpinner
            android:id="@+id/sp_inspect_data_entry_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >        
    </com.epro.psmobile.view.ProductSpinner>
    
    <TableLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:stretchColumns="0,1"
        >
		<TableRow
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		    >
			<LinearLayout
			     android:layout_width="120dp"
			     android:layout_height="wrap_content"
			     android:orientation="vertical"
			     android:layout_column="0"
			     android:paddingLeft="5dp"
			     android:paddingRight="5dp"
			    >
			    <TextView 
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
					  android:text="@string/label_inspect_data_entry_width"						  		          
			        />
			    	<View style="@style/Divider"/>
			    <EditText
			           android:id="@+id/et_inspect_data_entry_width" 
			           style="@style/style_edit_inspect_entry_number_field"
			        />			    	
			</LinearLayout>
			<LinearLayout
			     android:layout_width="120dp"
			     android:layout_height="wrap_content"
			     android:orientation="vertical"
			     android:layout_column="1"
			     android:paddingLeft="5dp"
			     android:paddingRight="5dp"			     
			    >
			    <TextView 
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
					  android:text="@string/label_inspect_data_entry_product_type"						  		          
			        />
			    	<View style="@style/Divider"/>
			    <EditText
			           android:id="@+id/et_inspect_data_entry_product_type" 
			           style="@style/style_edit_inspect_entry_field"			           
			        />			    	
			</LinearLayout>				    
		</TableRow>    
		<!--  -->
		<TableRow
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		    >
			<LinearLayout
			     android:layout_width="120dp"
			     android:layout_height="wrap_content"
			     android:orientation="vertical"
			     android:layout_column="0"
			     android:paddingLeft="5dp"
			     android:paddingRight="5dp"
			    >
			    <TextView 
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
					  android:text="@string/label_inspect_data_entry_long"						  		          
			        />
			    	<View style="@style/Divider"/>
			    <EditText
			           android:id="@+id/et_inspect_data_entry_long" 
			           style="@style/style_edit_inspect_entry_number_field"
			        />			    	
			</LinearLayout>
			<LinearLayout
			     android:layout_width="120dp"
			     android:layout_height="wrap_content"
			     android:orientation="vertical"
			     android:layout_column="1"
			     android:paddingLeft="5dp"
			     android:paddingRight="5dp"			     
			    >
			    <TextView 
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
					  android:text="@string/label_inspect_data_entry_density"						  		          
			        />
			    	<View style="@style/Divider"/>
			    <EditText
			           android:id="@+id/et_inspect_data_entry_density" 
			           style="@style/style_edit_inspect_entry_number_field"
			        />			    	
			</LinearLayout>				    
		</TableRow>       
		<!--  -->
		<TableRow
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		    >
			<LinearLayout
			     android:layout_width="120dp"
			     android:layout_height="wrap_content"
			     android:orientation="vertical"
			     android:layout_column="0"
			     android:paddingLeft="5dp"
			     android:paddingRight="5dp"
			    >
			    <TextView 
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
					  android:text="@string/label_inspect_data_entry_heigh"						  		          
			        />
			    	<View style="@style/Divider"/>
			    <EditText
			           android:id="@+id/et_inspect_data_entry_heigh" 
			           style="@style/style_edit_inspect_entry_number_field"
			        />			    	
			</LinearLayout>
			<LinearLayout
			     android:layout_width="120dp"
			     android:layout_height="wrap_content"
			     android:orientation="vertical"
			     android:layout_column="1"
			     android:paddingLeft="5dp"
			     android:paddingRight="5dp"			     
			    >
			    <TextView 
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
					  android:text="@string/label_inspect_data_entry_amount_unit"						  		          
			        />
			    	<View style="@style/Divider"/>
			    	<!--  
			    <EditText
			           android:id="@+id/et_inspect_data_entry_amount_unit" 
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			        />			    -->
			        <com.epro.psmobile.view.ProductUnitSpinner
			             android:id="@+id/sp_inspect_data_entry_amount_unit"
			             android:layout_width="match_parent"
 			             android:layout_height="wrap_content"
			            >
			            
			        </com.epro.psmobile.view.ProductUnitSpinner>
			        	
			</LinearLayout>				    
		</TableRow>       
		<!--  -->
		<TableRow
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		    >
			<LinearLayout
			     android:layout_width="120dp"
			     android:layout_height="wrap_content"
			     android:orientation="vertical"
			     android:layout_column="0"
			     android:paddingLeft="5dp"
			     android:paddingRight="5dp"
			    >
			    <TextView 
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
					  android:text="@string/label_inspect_data_entry_product_lost"						  		          
			        />
			    	<View style="@style/Divider"/>
			    <EditText
			           android:id="@+id/et_inspect_data_entry_product_lost" 
			           style="@style/style_edit_inspect_entry_number_field"
			        />			    	
			</LinearLayout>
			<LinearLayout
			     android:layout_width="120dp"
			     android:layout_height="wrap_content"
			     android:orientation="vertical"
			     android:layout_column="1"
			     android:paddingLeft="5dp"
			     android:paddingRight="5dp"			     
			    >
			    <TextView 
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
					  android:text="@string/label_inspect_data_entry_additional"						  		          
			        />
			    	<View style="@style/Divider"/>
			    <EditText
			           android:id="@+id/et_inspect_data_entry_additional" 
			           style="@style/style_edit_inspect_entry_number_field"
			        />			    	
			</LinearLayout>				    
		</TableRow>       
		<!--  -->    
		<TableRow
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		    >
			<LinearLayout
			     android:layout_width="120dp"
			     android:layout_height="wrap_content"
			     android:orientation="vertical"
			     android:layout_column="0"
			     android:paddingLeft="5dp"
			     android:paddingRight="5dp"
			    >
			    <TextView 
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
					  android:text="@string/label_inspect_data_entry_total_amount"						  		          
			        />
			    	<View style="@style/Divider"/>
			    <EditText
			           android:id="@+id/et_inspect_data_entry_total_amount" 
			           style="@style/style_edit_inspect_entry_number_field"
			        />			    	
			</LinearLayout>
	    </TableRow>
    </TableLayout>
   <LinearLayout
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:orientation="vertical"
			     android:layout_column="0"
			     android:paddingLeft="5dp"
			     android:paddingRight="5dp"
			    >
			    <TextView 
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
					  android:text="@string/label_inspect_data_entry_comment"						  		          
			        />
			    	<View style="@style/Divider"/>
			    <EditText
			           android:id="@+id/et_inspect_data_entry_comment" 
			           android:layout_width="100dp"
			           android:layout_height="wrap_content"
			           android:maxWidth="100dp"
			        />			    	
	</LinearLayout>
</LinearLayout>
