<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:visibility="gone"
        >
        <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_psmobile"
            />
        <TextView 
              android:id="@+id/tv_task_duplicate_dlg_title_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/label_task_duplicate_dlg_title"
            />
    </LinearLayout>

    <include layout="@layout/green_line_date_time_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
        />
    

    <TextView 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/label_task_duplicate_location_start"
        />
     <View style="@style/Divider"/>
     <!--  
     <EditText 
            android:id="@+id/edt_task_duplication_location_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
         />
         -->
    <com.epro.psmobile.view.CustomerSurveySiteSpinner 
        	android:id="@+id/spn_customer_survey_site_start"
        	android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	
        />
    <TextView 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/label_task_duplicate_location_to"
        />
     <View style="@style/Divider"/>

     <!--  
     <EditText 
            android:id="@+id/edt_task_duplication_location_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
         />
	-->
	    <com.epro.psmobile.view.CustomerSurveySiteSpinner 
        	android:id="@+id/spn_customer_survey_site_to"
        	android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	
        />
	
         <TextView 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/label_task_duplicate_distance"
        />
     <View style="@style/Divider"/>
     
     <EditText 
            android:id="@+id/edt_task_duplication_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="numberDecimal"
         />
     
     
    <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
        >
		<Button 
		       android:id="@+id/btn_task_duplicate_dlg_ok"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:padding="10dp"
		       android:layout_alignParentLeft="true"
		       android:text="@string/label_task_duplicate_dlg_title"
		    />        

		<Button 
		       android:id="@+id/btn_task_duplicate_dlg_cancel"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:padding="10dp"
		       android:layout_alignParentRight="true"
		       android:text="@string/label_simple_dlg_btn_cancel"
		    />		    
    </RelativeLayout>
</LinearLayout>
