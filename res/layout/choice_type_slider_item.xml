<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
	<TextView 
	     android:id="@+id/tv_slider_choice_name"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_marginLeft="10dp"
	     android:text="test"
	     android:layout_centerVertical="true"
	     
	    />
	<Button 
	      android:id="@+id/btn_slider_goto_more"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:text="more"
	      android:layout_alignParentRight="true"
	      android:layout_centerVertical="true"	      
	      android:visibility="invisible"
	    />
	<TextView
	       android:id="@+id/tv_slider_indicator_value"
	       android:layout_width="30dip"
	       android:layout_height="wrap_content"
	       android:layout_toLeftOf="@id/btn_slider_goto_more"
	       android:gravity="center"
	       android:text="0"
	       android:layout_centerVertical="true"	      
	       android:background="#c5c5c5"
	    >	    
	</TextView>
	<SeekBar
	    android:id="@+id/slider_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/styled_progress"
        android:thumb="@drawable/thumbler_small"
        android:indeterminate="false" 
        android:layout_toLeftOf="@id/tv_slider_indicator_value"
        android:layout_marginLeft="200dip"
        />
</RelativeLayout>