<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_date"
     />
 <View style="@style/Divider"
	    />
 <EditText
        android:id="@+id/et_postpone_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
         
     />
 <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/label_time"         
         android:layout_marginTop="5dp"
     />
 <View style="@style/Divider"
	    />
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
     >
 <EditText 
        android:id="@+id/et_postpone_start_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true" 
        android:inputType="number"       
     />     
 <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text=":"
     />
 <EditText 
        android:id="@+id/et_postpone_end_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true" 
        android:inputType="number"       
     />      
 </LinearLayout>
 <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/label_postpone_cause"
         android:layout_marginTop="5dp"
     />
  <View style="@style/Divider"
	    />
 <com.epro.psmobile.view.ReasonSentenceSpinner 
         android:id="@+id/sp_reasonSentencePostPone"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"         
     />
 <EditText 
         android:id="@+id/et_postpone_cause"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:singleLine="true"
     />
</LinearLayout>
