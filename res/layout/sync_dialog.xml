<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
     <CheckBox 
           android:id="@+id/chk_sync_upload"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:text="@string/text_sync_upload"   
 		   android:layout_centerVertical="true"                  
         />
     <ImageView
           android:id="@+id/img_sync_upload"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_syncin"
           android:layout_alignParentRight="true"
         ></ImageView>
     
       <TextView 
            android:id="@+id/tv_sync_upload_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/100"
            android:layout_toLeftOf="@id/img_sync_upload"
            android:layout_centerVertical="true"
			android:visibility="gone"            
         />
     
</RelativeLayout>
<TextView 
       android:id="@+id/tv_sync_upload_error"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="#ff0000"
       android:text="Error"
       android:visibility="gone"
    />
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >
     <CheckBox 
           android:id="@+id/chk_sync_download"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:text="@string/text_sync_download"
           android:layout_centerVertical="true"
         />
      <ImageView
           android:id="@+id/img_sync_download"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_syncin"
           android:layout_alignParentRight="true"
         ></ImageView>
     
             <TextView 
            android:id="@+id/tv_sync_download_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/100"
            android:layout_toLeftOf="@id/img_sync_download"
            android:layout_centerVertical="true"
            android:visibility="gone"
         />
      
</RelativeLayout>
<TextView 
       android:id="@+id/tv_sync_download_error"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="#ff0000"
       android:text="Error"
       android:visibility="gone"
    />

<View style="@style/Divider"
      android:layout_marginTop="10dp"
	    />
<CheckBox 
       android:id="@+id/chk_sync_off_line_mode"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/text_sync_dialog_offline"
    />
<RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="5dp"
    >
 <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
     >
     
  <Button
         android:id="@+id/btn_sync_ok"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/text_btn_sync_ok"
      />
  <Button
         android:id="@+id/btn_sync_cancel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/text_btn_sync_cancel"
      />
 </LinearLayout>   
</RelativeLayout>  
</LinearLayout>
