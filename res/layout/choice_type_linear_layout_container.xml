<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    style="@style/padding_choice"
    >
     
     <include layout="@layout/choice_type_open_text"/>

<LinearLayout 
      android:id="@+id/radio_check_list_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
    ></LinearLayout>

<com.epro.psmobile.view.ReasonSentenceSpinner 
     android:id="@+id/rsp_child"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:visibility="gone"
    />

<TextView 
      android:id="@+id/txt_label_extra_answer_simple_question"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_extra_answer_simple_question"
      android:visibility="gone"
    />
<LinearLayout
    android:focusable="true" android:focusableInTouchMode="true"
    android:layout_width="0px" android:layout_height="0px"/>

<com.epro.psmobile.view.PanningEditText
    android:id="@+id/et_extra_answer_simple_question"
    android:singleLine="false"
    android:lines="8" 
    android:minLines="6" 
    android:gravity="top|left" 
    android:maxLines="10"
    android:layout_height="wrap_content" 
    android:layout_width="match_parent"
    android:scrollbars="vertical" 
    android:layout_marginTop="10dp"
    android:background="@drawable/edit_bg"
    android:cursorVisible="true" 
    android:visibility="gone"
    />

</LinearLayout>
