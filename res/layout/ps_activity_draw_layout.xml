<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    >
    <LinearLayout 
           android:id="@+id/controls_full_screen"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:orientation="horizontal"
           android:visibility="gone"
           android:background="@android:color/transparent"
        >
        
        <SeekBar 
              android:id="@+id/seek_scale"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:progress="50"
        	  android:max="100"
            />
        <Button 
              android:id="@+id/btn_restore"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1:1"
            />
        
        <ImageButton 
              android:id="@+id/btn_controls_full_screen_preview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_collections_sort_by_size"
            />
        <ImageButton 
                android:id="@+id/btn_controls_full_screen_inspect_toolbox"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:src="@drawable/ic_content_edit"
            />
         <ImageButton 
                android:id="@+id/btn_controls_full_screen_back_to_screen"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:src="@drawable/ic_av_full_screen"
            />
       <ImageButton 
                android:id="@+id/btn_controls_full_screen_save"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:src="@drawable/ic_content_save"
            />
    </LinearLayout>
    <com.epro.psmobile.view.VScroll 
          android:id="@+id/v_scroll_draw_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@id/controls_full_screen"
          android:fillViewport="true" 
          android:scrollbarSize="0dp"
        >
       <com.epro.psmobile.view.HScroll
           android:id="@+id/h_scroll_draw_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fillViewport="true" 
           android:scrollbarSize="0dp"
           >
	    	<com.epro.psmobile.view.InspectRelativeLayout
    	    	android:id="@+id/layout_container"
    	    	style="@style/style_draw_layout_container"
    	    	android:layout_below="@id/controls_full_screen"
    	    	
    	    /> 
       </com.epro.psmobile.view.HScroll>
    </com.epro.psmobile.view.VScroll>
