<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"            
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    >
    
	<RelativeLayout 
	      android:id="@+id/navigator_bar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:layout_alignParentTop="true"
        >
		<ImageButton 
		       android:id="@+id/btn_previous_view"
		       android:layout_height="wrap_content"
		       android:layout_width="wrap_content"
		       android:background="@drawable/left_arrow"
		       android:layout_alignParentLeft="true"
		    />        
    </RelativeLayout>
    <!-- 
    <fragment 
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigator_bar"
        android:layout_marginTop="10dp"
		class="com.google.android.gms.maps.SupportMapFragment"
        />
-->
	<RelativeLayout
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigator_bar"
        android:layout_marginTop="10dp"        
        >
    </RelativeLayout>
    <!--  
     <fragment
     android:id="@+id/mapview"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_below="@id/navigator_bar"
     android:layout_marginTop="10dp"        
     class="com.google.android.gms.maps.SupportMapFragment"/>
 -->
    <LinearLayout 
           android:layout_width="400dp"
           android:layout_height="60dp"
           android:orientation="horizontal"
           android:layout_alignRight="@id/mapview"            
           android:gravity="center"
           android:padding="10dp"
        >
    <Spinner 
          android:id="@+id/sp_locations"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"          
        />
    <Button android:id="@+id/btn_go_to_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Go"/>
    <Button  android:id="@+id/btn_reset_to_my_location"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Reset"/>
    		
    </LinearLayout>
</RelativeLayout>
